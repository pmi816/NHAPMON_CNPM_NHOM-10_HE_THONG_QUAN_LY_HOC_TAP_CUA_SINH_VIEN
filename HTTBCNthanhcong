def show_update_success_message():
    print("✅ Thông tin cá nhân đã được cập nhật thành công!")
def save_updated_user(user_id, updated_data, users):
    for user in users:
        if user["id"] == user_id:
            for key, value in updated_data.items():
                user[key] = value

            show_update_success_message()
            return True

    print("❌ Không tìm thấy người dùng!")
    return False
