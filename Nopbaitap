def xem_danh_sach_bai_tap(danh_sach):
    print("Danh s√°ch b√†i t·∫≠p:")
    for i, bai in enumerate(danh_sach, start=1):
        print(f"{i}. {bai}")
def upload_file(ten_file):
    if ten_file.endswith((".pdf", ".docx", ".zip")):
        print(f"Upload th√†nh c√¥ng file: {ten_file}")
        return True
    else:
        print("ƒê·ªãnh d·∫°ng file kh√¥ng h·ª£p l·ªá!")
        return False
from datetime import datetime

def kiem_tra_han_nop(han_nop):
    hien_tai = datetime.now()
    if hien_tai <= han_nop:
        print("B√†i c√≤n trong h·∫°n n·ªôp.")
        return True
    else:
        print("ƒê√£ qu√° h·∫°n n·ªôp!")
        return False
def cho_phep_nop_lai(truoc_han):
    if truoc_han:
        print("Cho ph√©p n·ªôp l·∫°i b√†i.")
    else:
        print("Kh√¥ng cho ph√©p n·ªôp l·∫°i.")
def xac_nhan_nop():
    lua_chon = input("B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën n·ªôp b√†i kh√¥ng? (y/n): ")
    return lua_chon.lower() == "y"
def thong_bao_thanh_cong():
    print("üéâ N·ªôp b√†i th√†nh c√¥ng! H·ªá th·ªëng ƒë√£ ghi nh·∫≠n.")
danh_sach = ["B√†i 1", "B√†i 2", "B√†i 3"]
xem_danh_sach_bai_tap(danh_sach)

if upload_file("baitap1.pdf"):
    from datetime import timedelta
    han = datetime.now() + timedelta(days=1)

    if kiem_tra_han_nop(han):
        cho_phep_nop_lai(True)
        if xac_nhan_nop():
            thong_bao_thanh_cong()
