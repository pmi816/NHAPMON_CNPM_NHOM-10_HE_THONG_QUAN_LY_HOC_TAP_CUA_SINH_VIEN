def nhap_thong_tin_sinh_vien():
    print("=== NHẬP THÔNG TIN SINH VIÊN ===")

    sv = {}

    sv["ho_ten"] = input("Họ và tên: ")

    sv["mssv"] = input("Mã số sinh viên: ")

    # Nhập email
    while True:
        email = input("Email: ")
        if "@" in email and "." in email:
            sv["email"] = email
            break
        else:
            print("❌ Email không hợp lệ! Vui lòng nhập lại.")

