# Danh sách email đã đăng ký
existing_emails = [
    "user1@gmail.com",
    "example@yahoo.com",
    "test123@hotmail.com"
]

def check_email_exists(email):
    """
    Hàm kiểm tra email đã tồn tại hay chưa.
    Trả về True nếu có, False nếu chưa có.
    """
    return email.lower() in (e.lower() for e in existing_emails)


# ---- Test ----
email_input = input("Nhập email để kiểm tra: ")

if check_email_exists(email_input):
    print("❌ Email đã tồn tại trong hệ thống!")
else:
    print("✅
