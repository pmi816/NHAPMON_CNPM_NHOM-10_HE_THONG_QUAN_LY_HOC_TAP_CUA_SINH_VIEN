def save_updated_user(user_id, updated_data, users):
    for user in users:
        if user["id"] == user_id:
            for key, value in updated_data.items():
                user[key] = value

            print("✅ Lưu thông tin cập nhật vào hệ thống thành công!")
            return True

    print("❌ Không tìm thấy người dùng!")
    return False
